# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=localhost

# Service Ports
AUTH_SERVICE_PORT=3001
STREAM_SERVICE_PORT=3002
AUDIO_SERVICE_PORT=3003
VIDEO_SERVICE_PORT=3004
CLIP_SERVICE_PORT=3005
EXPORT_SERVICE_PORT=3006

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=clippy
RABBITMQ_PASSWORD=clippy_password

# MinIO (S3 Alternative for local development)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# AI Services
OPENAI_API_KEY=your-openai-api-key
WHISPER_MODEL=base # tiny, base, small, medium, large

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Chrome Extension
CHROME_EXTENSION_ID=your-extension-id

# Environment
NODE_ENV=development
LOG_LEVEL=debug
